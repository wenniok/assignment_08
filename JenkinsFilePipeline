pipeline{
    agent {
        docker {
            image 'node:18.17.1-alpine3.18'
        }
    }


    environment {
    FIREBASE_DEPLOY_TOKEN = credentials('github-token')
    }


    stages{
        stage('Building'){
            steps{
            sh 'npm install -g firebase-tools'
            }
        } 


         stage('Testing'){
            steps{
            sh 'firebase deploy -P devops-assignment-8-test-43b3c --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }


        stage('Staging'){
            steps{
            sh 'firebase deploy -P devops-assignment-8-stag-a5639 --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }


        stage('Production'){
            steps{
            sh 'firebase deploy -P devops-assignment-8-prod-cf51b --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }
    }
}
